        // 倒计时秒数
        countdown: 60,
        // 按钮上的文字
        codeMsg: "获取验证码",
        codeTs:'',
        codeNuber:'',
        // 定时器
        timer: null,
      };
    },
	mounted(){
    	this.user = JSON.parse(sessionStorage.getItem('user'));
    	console.log(this.user.realname);
    	API.userList({pageSize:999}).then((res)=>{
    	  console.log(res);

      })
        // this.init();
    },
    methods: {
      changeEmail(){
        this.centerDialogVisible = true;
      },
      saveChange(){
        console.log("djskd");
        console.log(this.user);
        if(this.getCodeNumberState){
          let promise = {
            userId: this.user.userId,
            username: this.user.username,
            realname: this.user.realname,
            usertype :this.user.usertype,
            email : this.getYanzheng.email
          }
          console.log(promise)
          console.log(this.getYanzheng.email)
          API.userUpdate(promise).then((res)=>{
            console.log(res)
          })
          this.centerDialogVisible = false;
        }else {
          console.log("验证码输入错误");
          this.$notify({
            title: '警告',
            message: '验证码输入错误',
            type: 'warning'
          });
        }
      },
      onchangeEmail(value){
        console.log(this)
        console.log("测试999")
        console.log(value);
        console.log(this.getcodeNuber)
        if(this.getcodeNuber == value){
            console.log("验证码输入正确");
          this.getCodeNumberState = true;
        }else{
          this.getCodeNumberState = false;
        }
      },
      getCodeNumber(formData) {
        console.log(this)
        this.$refs[formData].validate((valid) => {
          if (valid) {
            API.signIn({registerAcc:this.getYanzheng.email}).then((res)=>{
              console.log(res);
              if(res.code===1){
                console.log(666)
                console.log(res.data);
                  this.getcodeNuber = res.data
              }
            })
                // 验证码60秒倒计时
            if (!this.timer) {
              this.timer = setInterval(() => {
                if (this.countdown > 0 && this.countdown <= 60) {
                  this.countdown--;
                  if (this.countdown !== 0) {
                    this.codeMsg = "重新发送(" + this.countdown + ")";
                  } else {
                    clearInterval(this.timer);
                    this.codeMsg = "获取验证码";
                    this.countdown = 60;
                    this.timer = null;
                    this.codeDisabled = false;
                  }
                }
              }, 1000)
            }
          }else{

          }

        });
      },

    }
  }
