				this.usertypeuser=val;
				this.paramsuser.page =1;
    			this.allUser();
    	},
//  	statusFun(val){//状态选择方法change
//  		console.log(val)
//  		this.loading = true;
//  	    this.vstatus = val;
//  		this.init();
//  	},
    	//搜索
    	search(){//按照角色编码搜索
    		this.searchrole = this.searchValue;
    		if(this.searchrole){
    			  this.loading = true;
    			  this.init();
    		}else{
    			  this.$message({
		          title: '操作提示',
		          message: '请输入搜索内容', 
		          type: 'warning',
		        });
    		}
    	},
    	
    	searchuser(){//搜索所有用户
    		if(this.searchUserValue){
    			this.loadinguser = true;
    			this.isbumen = false;
    			this.paramsuser.page =1;
    			this.allUser();
    		}else{
    			this.$message({
		          title: '操作提示',
		          message: '请输入搜索内容', 
		          type: 'warning',
		        });
    		}
    	},
    	searchBumen(){//按照部门搜索所有用户
	    	if(this.searchUserValueBM){
	    		this.loadinguser = true;
	    		this.isbumen = true;
	    		this.paramsuser.page =1;
    			this.allUser();
    		}else{
    			this.$message({
		          title: '操作提示',
		          message: '请输入搜索内容', 
		          type: 'warning',
		        });
    		}
	    },
    	
    	cancel(){
    		this.addUserDialog = false;
