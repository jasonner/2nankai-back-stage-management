    		if(this.radioBumen){
    			this.bumenseachshow = true;
    		}else{
    			this.bumenseachshow = false;
    		}
    	},
		resert(){
			this.usertypeuser = '';
			this.searchUserValue='';
			this.checkedPeople = [];
			this.checkedPeopelAll=[];
			this.benPage=[];
			this.paramsuser.page=1;
			this.searchUserValueBM='';
	    	this.isbumen = false;
	    	this.bumenseachshow = false;
	    	this.radioBumen = '';
			this.$refs.multipletable.clearSelection();
		},
    	init(){
